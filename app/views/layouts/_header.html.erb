<header id="custom-bootstrap-menu" class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">SOA</a>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse navbar-menubuilder">
      <ul class="nav navbar-nav navbar-left">
          <li class="active"><%= link_to "Home", root_path %>
          </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <p class="navbar-text pull-right">
          <% if user_signed_in? %>
              <ul>
                <%= link_to user_path(current_user) do %>
                  <li class="round-image-50">
                    <%= image_tag(current_user.avatar.url(:thumb)) %>
                  </li>
                <% end %>
              </ul>
            <li><strong><%= current_user.email %></strong>.</li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-user" aria-hidden="true">Conta</span><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %>
                </li>
                <li><%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                </li>
                <li class="divider"></li>
                <li><%= link_to "Ajuda", help_path, :class => 'navbar-link' %>
                </li>
              </ul>
            </li>
          <% else %>
            <%= link_to "Ajuda",   help_path, :class => 'navbar-link' %> | 
            <%= link_to "Cadastre se", new_user_registration_path, :class => 'navbar-link'  %>
          <% end %>
        </p>
      </ul>
    </div>
  </div>
</header>