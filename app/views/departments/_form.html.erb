<%= form_for @department, :html => {:multipart => true} do |f| %>
  <% if @department.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@department.errors.count, "error") %> prohibited this department from being saved:</h2>

      <ul>
      <% @department.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description, autofocus: true, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :picture, "Imágem" %><br>
    <%= f.file_field :picture, autofocus: true, class: "form-control" %>
  </div>
  <!-- CHAVE -->
  <%= f.hidden_field :institute_id %>
  <div class="actions form-group">
    <%= f.submit "Criar Departamento", class:'btn btn-primary btn-sm' %>
  </div>
<% end %>
