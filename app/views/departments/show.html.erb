<% provide(:title, "#{@department.name}") %>
<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading text-center">
		<h1>
		  <strong><%= @department.name %></strong>
		</h1>
	</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover">
    		<tr>
    			<td rowspan="3">
    				<%= image_tag @department.picture.url(:thumb) %>
    			</td>
    			<td>
		 				<strong>Descrição:</strong>
		 		  	<%= @department.description %>
		 		  </td>
		 		</tr>
		 		<tr>
		 			<td>Criado em: <%= @department.created_at.to_s(:created) %></td>
		 		</tr>
        <tr>
          <td>Atualizado em: <%= @department.updated_at.to_s(:updated) %></td>
        </tr>
      </table>
    </div>
		<div class="well well-sm text-center">
			<%= link_to 'Editar', edit_department_path(@department), class:'btn btn-primary' %> |
			<%= link_to 'Voltar', departments_path, class:'btn btn-primary' %>
		</div>
	</div>
</div>
<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h1>Lista de Cursos</h1><h5><%= @courses.count %> Curso(s)</h5>
  </div>
  <div class="panel-body">
    <%= link_to 'Novo Curso', new_course_path, class:'btn btn-primary btn-lg btn-block' %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Imágem</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= image_tag course.picture.url(:thumb) %></td>
              <td><%= course.name %></td>
              <td><%= course.description %></td>
              <td><%= link_to 'Ver', course, class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Editar', edit_course_path(course), class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destruir', course, method: :delete, data: { confirm: 'Você tem certeza de que deseja destruir este curso permanentemente?' }, class:'btn btn-primary btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
    </div>
  </div>
</div>

<%= render 'courses/form' %>
