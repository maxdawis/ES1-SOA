<% provide(:title, "Departamentos") %>
<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h1>Lista de Departamentos</h1><h5><%= @departments.count %> Departamento(s)</h5>
  </div>
  <div class="panel-body">
    <%= link_to 'Novo Departamento', new_department_path, class:'btn btn-primary btn-lg btn-block' %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Imágem</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= image_tag department.picture.url(:thumb) %></td>
              <td><%= department.name %></td>
              <td><%= department.description %></td>
              <td><%= link_to 'Ver', department, class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Editar', edit_department_path(department), class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destruir', department, method: :delete, data: { confirm: 'Você tem certeza de que deseja destruir este departamento permanentemente?' }, class:'btn btn-primary btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'Novo Departamento', new_department_path, class:'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
</div>
