<% provide(:title, "Institutos") %>
<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h1>Lista de Institutos</h1><h5><%= @institutes.count %> Instituto(s)</h5>
  </div>
  <div class="panel-body">
    <%= link_to 'Novo Instituto', new_institute_path, class:'btn btn-primary btn-lg btn-block' %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Imágem</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @institutes.each do |institute| %>
            <tr>
              <td><%= image_tag institute.picture.url(:thumb) %></td>
              <td><%= institute.description %></td>
              <td><%= institute.name %></td>
              <td><%= link_to 'Ver', institute, class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Editar', edit_institute_path(institute), class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destruir', institute, method: :delete, data: { confirm: 'Você tem certeza de que deseja destruir este instituto permanentemente?' }, class:'btn btn-primary btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'Novo Instituto', new_institute_path, class:'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
</div>