<% provide(:title, "#{@institute.name}") %>
<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading text-center">
    <h4>
		  <strong><%= @institute.name %></strong>
		</h4>
	</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover">
    		<tr>
    			<td rowspan="3">
    				<%= image_tag @institute.picture.url(:thumb) %>
    			</td>
    			<td>
		 				<strong>Descrição:</strong>
		 		  	<%= @institute.description %>
		 		  </td>
		 		</tr>
		 		<tr>
		 			<td>Criado em: <%= @institute.created_at.to_s(:created) %></td>
		 		</tr>
        <tr>
          <td>Atualizado em: <%= @institute.updated_at.to_s(:updated) %></td>
        </tr>
      </table>
    </div>
		<div class="well well-sm text-center">
			<%= link_to 'Editar', edit_institute_path(@institute), class:'btn btn-primary btn-sm' %> |
			<%= link_to 'Voltar', institutes_path, class:'btn btn-primary btn-sm' %>
		</div>
	</div>
</div>

<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h3>Lista de Departamentos</h3><h5><%= @departments.count %> Departamento(s)</h5>
  </div>
  <div class="panel-body">
    
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Imágem</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= image_tag department.picture.url(:thumb) %></td>
              <td><%= department.name %></td>
              <td><%= department.description %></td>
              <td><%= link_to 'Ver', department, class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Editar', edit_department_path(department), class:'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destruir', department, method: :delete, data: { confirm: 'Você tem certeza de que deseja destruir este departamento permanentemente?' }, class:'btn btn-primary btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      
    </div>
  </div>
</div>
<%= render 'departments/form' %>